<UserControl x:Class="kioskProject.View.Menu"

      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kioskProject.View" 
      xmlns:ViewModel="clr-namespace:kioskProject.ViewModel" 
      xmlns:Model="clr-namespace:kioskProject.Model" Height="70" Width="90">

    <Grid>

        <Button>

        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="{Binding Price}" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
